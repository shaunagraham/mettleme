:javascript
  $(document).ready(function(){

  // Selct Box
  $(document).click(function(e){if(!$(e.target).is('.selection')){$(".sel_me").slideUp(200)}});

  $('.right .selection').click(function(){
  	$('.sel_me').slideUp();
  		if ($(this).parent('').children('.sel_me').is(':visible')){
  			$(this).parent('').children('.sel_me').slideUp(200);
  		}else{
  			$(this).parent('').children('.sel_me').slideToggle(200);
  		}
  	});

  	// Choose State
  	$('ul.sel_me_country_ship > li').click(function(){
  		$('input.sel_country_ship').val($(this).html());
  		$('ul.sel_me_coutry_ship').slideToggle(200);
  	});

  	$('ul.sel_me_state_ship > li').click(function(){
  		$('input.sel_state_ship').val($(this).html());
  		$('ul.sel_me_state_ship').slideToggle(200);
  	});

  	$('ul.sel_me_country_bill > li').click(function(){
  		$('input.sel_country_bill').val($(this).html());
  		$('ul.sel_me_coutry_bill').slideToggle(200);
  	});

  	$('ul.sel_me_state_bill > li').click(function(){
  		$('input.sel_state_bill').val($(this).html());
  		$('ul.sel_me_state_bill').slideToggle(200);
  	});
  });
