.content_wrapper
  .reset-password-block
    .reset-password
      %h2 Reset your password
      %p We will email you a link to reset your password.
      = form_for :password, :url => passwords_path do |form|
        %ul
          %li= form.label :email, "Email address"
          %li= form.text_field :email, :type => "email", :size => 150
          %li= form.submit "Reset password", class: 'btn_blue'
    .clr
